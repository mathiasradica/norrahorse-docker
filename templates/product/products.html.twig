{% extends "layout.html.twig" %}
{% block title %}Products{% endblock %}

{% block main %}
<div class="d-lg-none p-3 bg-white">
    <a href="/"><i class="fas fa-chevron-left" style="color:#5f5f5f;"></i></a>
    <span style="color:#5f5f5f; font-size:16px; font-weight:bold">TUOTTEET</span>
</div>

<div class="p-4">
    <div style="width:calc(100% - 6px); margin-left:3px; margin-right:-3px" class="navigation-links p-4 bg-white d-none d-lg-block mb-1">
        <div><a style="color:#5f5f5f; text-decoration:none; font-size:12px" href="/">Etusivu</a>&nbsp / &nbsp
            <span style="color:#5f5f5f; font-size:12px">TUOTTEET</span>
        </div>
        <div class="pt-3" style="color:#5f5f5f; font-size:x-large; font-weight:bold">TUOTTEET</div>
    </div>

    {% if products %}
    <div class="row m-0">
        {% for product in products %}
        <div class="col-6 col-lg-4 p-0 mb-1">
            <div class="card h-100">
                <div class="card-img d-flex justify-content-center">
                    <a href="{{asset(product.url)}}">
                        <img style="height:150px" src="{{asset(product.imageUrl)}}" class="img-fluid">
                    </a>
                </div>
                <div class="card-body d-flex flex-column">
                    <a class="card-title" href="{{asset(product.url)}}">
                        <h5 style="color:#5f5f5f" class="card-title text-center">{{product.title}}</h5>
                    </a>
                    <p style="font-size:12px; color:#5f5f5f">{{product.shortDescription}}</p>
                    <div class="h-100"></div>
                    <div class="price-box d-flex justify-content-between align-items-center mb-3">
                        <span style="color:#5f5f5f" class="fs-4 price {{product.url}} fw-bold"></span>
                        <span style="font-size:x-small" class="text-muted vat {{product.vat}}"></span>
                    </div>
                    <div class="btn-box d-flex align-items-end">
                        <button type="button" class="card-btn">Lue lisää</button>
                    </div>
                    <div style="color:green; font-size:12px;" class="mt-3 in-store-box">
                        <i style="opacity:0; transition: 0.5s ease-in;" class="in-store-circle {{product.url}}"></i>
                        <span style="opacity:0; transition: 0.5s ease-in;" class="in-store {{product.url}}"></span>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
    {% endif %}
</div>
<script src="js/products-details.js"></script>
{% endblock %}